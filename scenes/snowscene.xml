<lxs>
    <scene root="root" axis_length="5.0"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.5" g="0.5" b="0.5" a="1" />
        <background r="0.6" g="0.8" b="0.9" a="1" />
    </ambient>

    <lights>
        <omni id="day" enabled="1">
            <location x="29" y="22" z="0" w="1" />
            <ambient r="0.9" g="0.8" b="0.5" a="1" />
            <diffuse r="0.9" g="0.8" b="0.5" a="1" />
            <specular r="0.9" g="0.8" b="0.5" a="1" />
        </omni>
        <omni id="night" enabled="0">
            <location x="29" y="29" z="-29" w="1" />
            <ambient r="0.1" g="0.35" b="0.65" a="0.2" />
            <diffuse r="0.1" g="0.35" b="0.65" a="0.2" />
            <specular r="0.1" g="0.35" b="0.65" a="0.2" />
        </omni>
    </lights>

    <textures>
        <texture id="trunk" file="../scenes/images/birchWood.png" />
        <texture id="snow" file="../scenes/images/snow.png" />
        <texture id="leaves" file="../scenes/images/snowleaves.jpg"/>
        <texture id="housefront" file="../scenes/images/houseFront.png"/>
        <texture id="houseside" file="../scenes/images/houseSide.png"/>
        <texture id="houseback" file="../scenes/images/houseBack.png"/>
    </textures>

    <materials>
        <material id="snow" shininess = "100">
            <emission r="0.3" g="0.3" b="0.3" a="1" />
            <ambient r="0.3" g="0.3" b="0.3" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="trans0">
            <translate x="13" y="1" z="3" />
        </transformation>
        <transformation id="trans1">
            <translate x="0" y="0" z="0.5" />
        </transformation>
        <transformation id="trans2">
            <translate x="0" y="0" z="-0.5" />
            <rotate axis="x" angle="180" />
        </transformation>
        <transformation id="trans3">
            <translate x="0" y="0.5" z="0" />
            <rotate axis="x" angle="-90" />
        </transformation>
        <transformation id="trans4">
            <translate x="0" y="-0.5" z="0" />
            <rotate axis="x" angle="90" />
        </transformation>
        <transformation id="trans5">
            <translate x="0.5" y="0" z="0" />
            <rotate axis="y" angle="90" />
        </transformation>
        <transformation id="trans6">
            <translate x="-0.5" y="0" z="0" />
            <rotate axis="y" angle="-90" />
        </transformation>
    </transformations>
    
    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive >
        <primitive id="tor">
            <torus inner="1" outer="3" slices="30" loops="30" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="6" slices="30" stacks="30" />
        </primitive>
        <primitive id="cone">
            <cylinder base="0.5" top="0" height="1" slices="30" stacks="30" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" slices="30" stacks="30" />
        </primitive>
    </primitives >

    <components>
        <component id="root">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <children>
                <componentref id="tree1" />
                <componentref id="tree2" />
                <componentref id="tree3" />
                <componentref id="tree4" />
                <componentref id="floor" />
                <componentref id="house" />
                <componentref id="snowball" />
            </children>
        </component>

        <component id="snowball">
            <transformation>
                <transformationref id="trans0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="snow" length_s="1" length_t="1" />
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="right">
            <transformation>
                <transformationref id="trans1" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="houseside" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="left">
            <transformation>
                <transformationref id="trans2" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="houseside" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="house_top">
            <transformation>
                <transformationref id="trans3" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="houseback" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="bottom">
            <transformation>
                <transformationref id="trans4" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="houseback" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="front">
            <transformation>
                <transformationref id="trans5" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="housefront" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="back">
            <transformation>
                <transformationref id="trans6" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="houseback" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="house">
            <transformation>
                <translate x="11" y="2" z="11" />
                <scale x="4" y="4" z="4" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.1" />
            <children>
                <componentref id="right" />
                <componentref id="left" />
                <componentref id="house_top" />
                <componentref id="bottom" />
                <componentref id="front" />
                <componentref id="back" />
            </children>
        </component>
          
        <component id="trunk">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="0.9" y="1" z="0.9" />
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="trunk" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="top">
            <transformation>
                <translate x="0" y="6" z="0" />
                <scale x="4" y="6" z="4" />
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="leaves" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cone" />
            </children>
        </component>

        <component id="tree1">
            <transformation>
                <translate x="2" y="0" z="3" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="trunk" />
                <componentref id="top" />
            </children>
        </component>

        <component id="tree2">
            <transformation>
                <translate x="3" y="0" z="9" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="trunk" />
                <componentref id="top" />
            </children>
        </component>

        <component id="tree3">
            <transformation>
                <translate x="2" y="0" z="15" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="trunk" />
                <componentref id="top" />
            </children>
        </component>

        <component id="tree4">
            <transformation>
                <translate x="7" y="0" z="18" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="trunk" />
                <componentref id="top" />
            </children>
        </component>

        <component id="floor">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <scale x="20" y="20" z="0" />
                <translate x="0.5" y="-0.5" z="-0.5" />
            </transformation>
            <materials>
                <material id="snow" />
            </materials>
            <texture id="snow" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        
    </components>
</lxs>
